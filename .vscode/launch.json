    "version": "0.2.0",
    "configurations": [
        {
            "name": "Lime",
            "request": "launch",
            "type": "lime",
        },
        {
            "name": "HashLink",
            "request": "launch",
            "type": "hl",
            // "cwd": "${workspaceFolder}",
            "cwd": "${workspaceFolder}/Export/hl/bin",
            "program": "${workspaceFolder}/Export/hl/bin/hlboot.dat",
            "hl": "${workspaceFolder}/export/hl/bin/Test.exe",
            "preLaunchTask": "lime: build (active configuration)"
        },
        {
            "name": "HTML5 debug",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}",
            "preLaunchTask": "Build HTML5 debug",
        },
        {
            "name": "HXCPP Rebuild",
            "type": "hxcpp",
            "request": "launch",
            "program": "${workspaceFolder}/Export/windows/bin/Test.exe",
            "preLaunchTask": "Build Windows debug"
        },
        {
            "name": "HXCPP",
            "type": "hxcpp",
            "request": "launch",
            "program": "${workspaceFolder}/Export/windows/bin/Test.exe",
        },
        {
            "name": "Flash",
            "type": "fdb",
            "request": "launch",
            "program": "${workspaceFolder}/Export/flash/bin/Test.swf",
            "preLaunchTask": "Build Flash debug"
        }
    ]
}